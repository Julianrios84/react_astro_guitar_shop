---
import Layout from '../layouts/Layout.astro';
import Guitar from '../components/Guitar.astro';

const url = `${import.meta.env.PUBLIC_API_URL}/guitars?populate=picture`;
const response = await fetch(url);
const { data } = await response.json();
---

<Layout title="Shop" description="Description Shop">
  <main class="container">
    <h2 class="heading">Our Collection</h2>

    <div class="grid">
      {data?.map((guitar) => <Guitar guitar={guitar} />)}
    </div>
  </main>
</Layout>

<style>
  .content {
    display: grid;
    gap: 4rem;
  }
  @media (min-width: 768px) {
    .content {
      grid-template-columns: repeat(2, 1fr);
      align-items: center;
    }
  }
</style>
